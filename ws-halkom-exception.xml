<?xml version="1.0" encoding="UTF-8"?> 
<beans default-autowire="byName" xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-3.1.xsd">
   
<!-- ============ exception handling ===================== -->

 <bean id="exceptionResolver" class="org.springframework.ws.soap.server.endpoint.SoapFaultMappingExceptionResolver">
        <property name="defaultFault" value="SERVER">
        </property>
        <property name="exceptionMappings">
        	<props>
                <prop key="org.springframework.oxm.ValidationFailureException">CLIENT,Invalid input params</prop>
                <prop key="wshalkom.exception.exception.DataAccessException">SERVER,Data access exception</prop> 
                <prop key="wshalkom.exception.exception.NotFoundException">SERVER,Data does not exists</prop>   
                <prop key="wshalkom.exception.exception.ResponseErrorException">SERVER,Response exception</prop>
            </props>
        </property>
    </bean>
    
 </beans>